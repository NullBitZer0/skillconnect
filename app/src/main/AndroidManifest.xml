<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Skillconnect">
        
        <!-- Splash Activity - Entry point -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Skillconnect">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Onboarding Activities -->
        <activity
            android:name=".OnboardingActivity1"
            android:exported="false"
            android:parentActivityName=".SplashActivity" />
            
        <activity
            android:name=".OnboardingActivity2"
            android:exported="false"
            android:parentActivityName=".OnboardingActivity1" />
            
        <activity
            android:name=".OnboardingActivity3"
            android:exported="false"
            android:parentActivityName=".OnboardingActivity2" />
        
        <!-- Authentication Activities -->
        <activity
            android:name=".SignUpActivity"
            android:exported="false"
            android:parentActivityName=".OnboardingActivity3" />
            
        <activity
            android:name=".SignInActivity"
            android:exported="false"
            android:parentActivityName=".SignUpActivity" />
        
        <!-- View Details Activity -->
        <activity
            android:name=".ViewDetailsActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        
        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>